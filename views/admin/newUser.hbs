
<section class="vh-100">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-6 col-lg-6 col-xl-5">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-6 col-lg-6 col-xl-4 offset-xl-1">
          <div class="h2 text-center mb-4">New User</div>
          <form action="/admin/new-user" method="post" name="form" id="loginForm">
            <div class="d-flex flex-column align-items-center justify-content-center justify-content-lg-start px-5">
            {{#if err}}
            <div class="form-control" style="border:none !important">
            <div class="err text-danger"><p>{{err.message}}</p></div>
          </div>
            {{/if}}
               <!-- User name input -->
            <div class="form-outline mb-4">
              <input type="text" id="username" class="form-control"
                placeholder="Enter a user name" name="userName"/>
              <label></label>
              <p class="form-label">User Name</p>
            </div>
            <!-- Email input -->
            <div class="form-outline mb-4">
              <input type="email" id="email" class="form-control"
                placeholder="Enter a valid email address" name="email"/>
              <label></label>
              <p class="form-label">Email address</p>
            </div>
  
            <!-- Password input -->
            <div class="form-outline mb-3">
              <input type="password" id="password" class="form-control"
                placeholder="Enter password" name="password"/>
              <label class="lbl" for="form3Example4"></label>
              <p class="form-label ">Password</p>
            </div>
              <button type="submit" class="btn btn-primary btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem;" onclick="return confirm('Are you sure you want to submit the form')">Create User</button>
  
          </form>
        </div>
      </div>
    </div>
   
      <!-- Right -->
    </div>
  </section>
  <script>
   $('#loginForm').validate({
      rules:{
          email:{
              required:true,
          },
          password:{
              required:true,
              minlength:4
          },
          userName:{
            required:true,
          }
      },
      messages : {
        required: "This field is requied",
        minlength: "Password should be at least 4 characters"
      }
   });
  </script>